VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# AbacatePay Payment Gateway
# Get your API keys at https://dashboard.abacatepay.com

# Development key (sandbox - starts with abc_dev_)
VITE_ABACATEPAY_DEV_KEY=abc_dev_your_dev_key_here

# Production key (live payments - starts with abc_live_)
VITE_ABACATEPAY_PROD_KEY=abc_live_your_prod_key_here

# Which environment to use: "dev" or "prod"
VITE_ABACATEPAY_ENV=dev
SECRET_ABACATEPAY_DEV_KEY=abc_dev_your_dev_key_here
SECRET_ABACATEPAY_PROD_KEY=abc_live_your_prod_key_here

# Resend Email Service
# Get your API key at https://resend.com/api-keys
# Required for magic link authentication
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
